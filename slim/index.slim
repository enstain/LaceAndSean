<body>

  .wrapper
    .sidebar
      .logo
        
      ul.menu
        li.active 
          a href="#" Женская коллекция
          ul
            li 
              a href="#" Блузки
            li 
              a href="#" Юбки
            li 
              a href="#" Жакеты
            li 
              a href="#" Брюки
